<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="12dp"
    tools:context=".ui.profile.ProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_warm"
            app:elevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:navigationIcon="@drawable/ic_back_button"
                app:title="@string/label_profile" />
        </com.google.android.material.appbar.AppBarLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_photo_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_profile_picture"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appbar_profile" />

        <TextView
            android:id="@+id/tv_information"
            style="@style/Theme.Alpaca.Text.Label.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:text="@string/privacy_information"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_photo_profile" />

        <TextView
            android:id="@+id/tv_name_profile"
            style="@style/Theme.Alpaca.Text.Label.Medium.Profile"
            android:text="@string/label_name"
            app:layout_constraintStart_toStartOf="@+id/tv_information"
            app:layout_constraintTop_toBottomOf="@+id/tv_information" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_name_profile"
            style="@style/Theme.Alpaca.InputLayout.Profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name_profile">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_name_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_email_profile"
            style="@style/Theme.Alpaca.Text.Label.Medium.Profile"
            android:text="@string/label_email"
            app:layout_constraintStart_toStartOf="@+id/tv_information"
            app:layout_constraintTop_toBottomOf="@+id/til_name_profile" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_email_profile"
            style="@style/Theme.Alpaca.InputLayout.Profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_email_profile">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_email_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_security"
            style="@style/Theme.Alpaca.Text.Label.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:text="@string/security"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til_email_profile" />

        <TextView
            android:id="@+id/tv_current_password_profile"
            style="@style/Theme.Alpaca.Text.Label.Medium.Profile"
            android:text="@string/label_current_password"
            app:layout_constraintStart_toStartOf="@+id/tv_information"
            app:layout_constraintTop_toBottomOf="@+id/tv_security" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_current_password_profile"
            style="@style/Theme.Alpaca.InputLayout.Profile"
            app:endIconMode="password_toggle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_current_password_profile">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_current_password_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_new_password_profile"
            style="@style/Theme.Alpaca.Text.Label.Medium.Profile"
            android:text="@string/label_new_password"
            app:layout_constraintStart_toStartOf="@+id/tv_information"
            app:layout_constraintTop_toBottomOf="@+id/til_current_password_profile" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_new_password_profile"
            style="@style/Theme.Alpaca.InputLayout.Profile"
            app:endIconMode="password_toggle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_new_password_profile">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_new_password_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_confirm_password_profile"
            style="@style/Theme.Alpaca.Text.Label.Medium.Profile"
            android:text="@string/label_confirm_password"
            app:layout_constraintStart_toStartOf="@+id/tv_information"
            app:layout_constraintTop_toBottomOf="@+id/til_new_password_profile" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_confirm_password_profile"
            style="@style/Theme.Alpaca.InputLayout.Profile"
            app:endIconMode="password_toggle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_confirm_password_profile">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_confirm_password_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_note_profile"
            style="@style/Theme.Alpaca.Text.Label.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:text="@string/note_edit_profile"
            android:textColor="@color/grey_500"
            app:layout_constraintEnd_toEndOf="@+id/til_confirm_password_profile"
            app:layout_constraintStart_toStartOf="@+id/til_confirm_password_profile"
            app:layout_constraintTop_toBottomOf="@+id/til_confirm_password_profile" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:text="@string/save"
            app:icon="@drawable/ic_check"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_note_profile" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>